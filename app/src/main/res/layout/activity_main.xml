<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base_bg"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <!--指示器标题-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/base_titlebar_bg"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_Video"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/main_video"
                android:textColor="@color/tittle_select"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_music"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/main_music"
                android:textColor="@color/tittle_select"
                android:textSize="18sp" />

        </LinearLayout>
        <!--指示器-->
        <TextView
            android:id="@+id/line_tittle"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/tittle_green" />
    </RelativeLayout>
    <!--播放列表-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
