<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_custom"
    android:background="#af000408"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_custom_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/icon" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp">
            <!--标题-->
            <TextView
                android:id="@+id/tv_custom_tittile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="歌曲名"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
            <!--歌手名-->
            <!--android:ellipsize="end" 显示不全的时候末尾添加省略号-->
            <TextView
                android:id="@+id/tv_custom_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:lines="1"
                android:ellipsize="end"
                android:text="歌手"
                android:textColor="@color/half_white"
                android:textSize="12sp" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_custom_pre"
            android:layout_marginLeft="12dp"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@mipmap/icon_notification_pre" />
        <ImageView
            android:id="@+id/iv_custom_playstatust"
            android:layout_marginLeft="18dp"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@mipmap/btn_audio_pause" />

        <ImageView
            android:id="@+id/iv_custom_next"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/icon_notification_next" />

    </LinearLayout>
</RelativeLayout>